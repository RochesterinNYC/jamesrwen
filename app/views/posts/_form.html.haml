= form_for(post) do |f|
  %h3
    Post Details:
  .row
    .col
      = f.label :title
      %br
      = f.text_field :title
    .col
      = f.label :handle
      %br
      = f.text_field :handle
  .row
    .col
      = f.label :description
      %br
      = f.text_area :description, size: '50x2'
  %h3
    Post Content:
  .row
    .col
      = f.label :content
      %br
      = f.text_area :content, size: '75x10', id: "markdown-input"
      %br
      #see_preview.btn.btn-primary
        See Preview
    .col
      %label
        Content Preview:
      #preview
  :javascript
    $(document).ready(function(){
      function updatePreview(){
        MarkdownConverter.updatePreview();
      }
      MarkdownConverter.updatePreview();
      $("#see_preview").click(updatePreview);
    });
  .row
    = f.submit 'Save', class: "btn btn-success", style: "width: 100%;"