= form_for(upload) do |f|
  %h3
    Upload Details:
  .row
    .col
      = f.label :handle
      %br
      = f.text_field :handle
    .col
      = f.label :description
      %br
      = f.text_area :description, size: '50x2'
  %h3
    Upload File:
  .row
    .col
      = f.label :file
      = f.file_field :file, class: "file-input btn btn-info"
      - if upload.persisted? && upload.file.present?
        .btn.btn-info
          = link_to "Delete File", delete_file_path(id: upload.id), method: :post
        = link_to(image_tag(upload.file.url(:thumbnail)), upload.file.url)
  .row
    = f.submit 'Save', class: "btn btn-success", style: "width: 100%;"