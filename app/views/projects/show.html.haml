.project-show-frame
  .project-title.text-center
    = @project.title
  .project-category
    Type:
    = @project.category.capitalize
  .project-modifier
    = @project.course? && !@project.modifier.blank? ? "Course:" : ""
    = @project.hackathon? && !@project.modifier.blank? ? "Hackathon:" : ""
    = @project.modifier
  .project-site
    = @project.site_link.blank? ? "" : "Site:"
    = @project.site_link
  .project-github
    = @project.github_link.blank? ? "" : "Github:"
    = @project.github_link
  .project-description
    Description:
    = @project.description
  - if !@project.content.blank?
    .project-content
      = PersonalSite::MARKDOWN.render(@project.content).html_safe
  %br
  %br
  - if params[:source]
    - if params[:source] == "ADMIN"
      = link_to "Back to All Projects", projects_path
    - if params[:source] == "COURSE"
      = link_to "Back to Course Projects", courses_path
    - if params[:source] == "HACKATHON"
      = link_to "Back to Hackathon Projects", hackathons_path
    - if params[:source] == "PERSONAL"
      = link_to "Back to Personal Projects", portfolio_path