.project-frame.text-center
  = link_to project_path(project, source: params[:source]) do
    .project-title
      = project.title
    .project-modifier
      = project.modifier
    .project-description
      = project.description
  .project-link
    = link_to project.site_link, project.site_link, target: "_blank"
  - if current_user
    .project-admin
      = link_to "Edit", edit_project_path(project)
      = link_to "Delete", project_path(project), method: 'DELETE'
%br
